{
	"schemaVersion": "0.1.0",
	"name": "Letterboxd",
	"behavior": "create",
	"noteContentFormat": "# Summary\n\n{{description}}",
	"properties": [
		{
			"name": "cover",
			"value": "{{schema:image}}",
			"type": "text"
		},
		{
			"name": "director",
			"value": "{{schema:director[*].name|wikilink|join}}",
			"type": "multitext"
		},
		{
			"name": "date",
			"value": "",
			"type": "date"
		},
		{
			"name": "genres",
			"value": "{{schema:genre|join}}",
			"type": "multitext"
		},
		{
			"name": "year",
			"value": "{{schema:releasedEvent[0].startDate|date:\\\"YYYY\\\"}}",
			"type": "number"
		},
		{
			"name": "icon",
			"value": "lucide-clapperboard",
			"type": "text"
		},
		{
			"name": "lists",
			"value": "",
			"type": "multitext"
		},
		{
			"name": "status-movie",
			"value": "",
			"type": "text"
		},
		{
			"name": "tags",
			"value": "movie",
			"type": "multitext"
		},
		{
			"name": "banner",
			"value": "{{meta:property:og:image}}",
			"type": "text"
		}
	],
	"triggers": [
		"https://letterboxd.com/film/"
	],
	"noteNameFormat": "{{schema:name|replace:\":\":\"êž‰\"}}",
	"path": "Objects/Movies"
}