filters:
  and:
    - file.hasTag("movie")
    - not:
        - file.inFolder("Templates")
properties:
  file.name:
    displayName: Name
  note.status-movie:
    displayName: Status
  note.director:
    displayName: Director
  note.year:
    displayName: Year
  note.genres:
    displayName: Genres
  note.lists:
    displayName: Lists
  note.date:
    displayName: Finished
views:
  - type: cards
    name: To Watch
    filters:
      or:
        - note["status-movie"].contains("To Watch")
        - note["status-movie"].isEmpty()
    order:
      - file.name
      - year
    image: cover
    imageAspectRatio: 1.55
    cardSize: 190
  - type: cards
    name: Completed
    filters:
      or:
        - note["status-movie"].contains("Completed")
    order:
      - file.name
      - year
    sort:
      - property: date
        direction: DESC
    image: cover
    imageAspectRatio: 1.55
    cardSize: 190
