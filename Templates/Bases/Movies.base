filters:
  and:
    - contains(property.tags, "movie")
    - file.folder != "Templates"
display:
  file.name: Name
  property.status: Status
  property.director: Director
  property.year: Year
  property.genres: Genres
  property.lists: Lists
  property.site: Site
  property.date: Finished
views:
  - type: table
    name: Completed
    filters:
      and:
        - contains(property.status, "Completed")
    order:
      - status
      - file.name
      - year
      - site
      - lists
      - date
    limit: 100
    sort:
      - column: property.date
        direction: DESC
    columnSize:
      property.status: 150
      file.name: 300
      property.director: 220
      property.year: 65
      property.site: 300
      property.lists: 300
      property.date: 140
  - type: table
    name: To Watch
    filters:
      or:
        - contains(property.status, "To Watch")
        - contains(property.status, "To Read")
        - empty(property.status)
    order:
      - status
      - file.name
      - year
      - site
      - lists
    limit: 10
    sort:
      - column: property.date
        direction: DESC
    columnSize:
      property.status: 150
      file.name: 300
      property.director: 220
      property.year: 65
      property.site: 300
      property.lists: 300
