filters:
  and:
    - tags.contains("book")
    - file.folder != "Templates"
properties:
  file.name:
    displayName: Name
  note.status:
    displayName: Status
  note.author:
    displayName: Author
  note.year:
    displayName: Year
  note.format:
    displayName: Format
  note.genres:
    displayName: Genres
  note.lists:
    displayName: Series
  note.date:
    displayName: Finished
views:
  - type: cards
    name: Reading
    filters:
      or:
        - status.contains("Reading")
        - status.contains("Watching")
    order:
      - file.name
      - author
    image: cover
    imageAspectRatio: 1.55
    cardSize: 190
  - type: cards
    name: To Read
    filters:
      or:
        - status.contains("To Read")
        - status.contains("To Watch")
        - status.isEmpty()
    order:
      - file.name
      - author
    image: cover
    imageAspectRatio: 1.55
    cardSize: 190
  - type: cards
    name: Completed
    filters:
      or:
        - status.contains("Completed")
    order:
      - file.name
      - author
    sort:
      - property: date
        direction: DESC
      - property: year
        direction: DESC
    image: cover
    imageAspectRatio: 1.55
    cardSize: 190
  - type: cards
    name: Dropped
    filters:
      or:
        - status.contains("Dropped")
    order:
      - file.name
      - author
    image: cover
    imageAspectRatio: 1.55
    cardSize: 190
